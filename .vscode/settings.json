{
    // GitLens settings
    "gitlens.currentLine.enabled": true,
    "gitlens.currentLine.pullRequests.enabled": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": true,
    "gitlens.codeLens.authors.enabled": true,
    "gitlens.codeLens.recentChange.enabled": true,
    // Show blame annotations
    "gitlens.blame.avatars": true,
    "gitlens.blame.compact": false,
    "gitlens.blame.format": "${author|10} ${date}",
    // Graph settings
    "gitlens.graph.layout": "editor",
    "gitlens.graph.minimap.enabled": true,
    // TypeScript/React settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    // File nesting (optional but nice)
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.js.map",
        "*.tsx": "${capture}.js, ${capture}.d.ts",
        "package.json": "package-lock.json, .gitignore, .npmrc, tsconfig.json"
    }
}